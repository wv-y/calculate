<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:columnCount="4"
android:rowCount="6"
android:orientation="horizontal"
tools:context=".MainActivity">
<!--网格布局6行4列-->



    <EditText
        android:id="@+id/textEx"
        android:layout_rowWeight="10"
        android:layout_columnWeight="4"
        android:layout_columnSpan="4"

        android:text="请输入"
        android:textSize="20dp"
        android:gravity="right|bottom"
        android:focusable="false"
        android:background="@null"
        android:layout_marginRight="10dp"/>



    <Button
        android:id="@+id/ac"
        android:text="AC"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/back"
        android:text="BACK"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/leftBracket"
        android:text="("
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1" />

    <Button
        android:id="@+id/add"
        android:text="+"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"
        />




    <Button
        android:id="@+id/num7"
        android:text="7"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num8"
        android:text="8"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num9"
        android:text="9"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/sub"
        android:text="-"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>


    <Button
        android:id="@+id/num4"
        android:text="4"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num5"
        android:text="5"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num6"
        android:text="6"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/mul"
        android:text="*"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"
        />


    <Button
        android:id="@+id/num1"
        android:text="1"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num2"
        android:text="2"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num3"
        android:text="3"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/div"
        android:text="/"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>


    <Button
        android:id="@+id/num0"
        android:text="0"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"
        />

    <Button
        android:id="@+id/point"
        android:text="."
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/rightBracket"
        android:text=")"
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1" />

    <Button
        android:id="@+id/equ"
        android:text="="
        android:textSize="25dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but_bug"/>

</GridLayout>