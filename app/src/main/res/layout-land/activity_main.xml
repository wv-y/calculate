<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="7"
    android:rowCount="5">

    <EditText
        android:id="@+id/textEx"
        android:layout_rowWeight="4"
        android:layout_columnSpan="7"
        android:layout_columnWeight="7"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:focusable="false"
        android:gravity="right|bottom"
        android:hint="请输入"
        android:textSize="20dp" />


    <Button
        android:id="@+id/ac"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but_bug"
        android:text="AC" />

    <Button
        android:id="@+id/back"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but_bug"
        android:text="BACK"
        />

    <Button
        android:id="@+id/pi"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"
        android:text="π"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/num0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"
        android:text="0" />

    <Button
        android:id="@+id/point"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"
        android:text="." />

    <Button
        android:id="@+id/div"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"
        android:text="/" />

    <Button
        android:id="@+id/add"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="+"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/leftBracket"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="("
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/rightBracket"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text=")"
        android:background="@drawable/but1"/>


    <Button
        android:id="@+id/e"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="e"
        android:textAllCaps="false"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="1"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="2"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="3"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/sub"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/but1"
        android:text="-" />


    <Button
        android:id="@+id/power"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="^"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/ln"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="ln"
        android:textAllCaps="false"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/rad"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="√"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num4"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="4"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num5"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="5"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num6"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="6"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/mul"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="*"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/sin"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="sin"
        android:textAllCaps="false"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/cos"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="cos"
        android:textAllCaps="false"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/tan"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="tan"
        android:textAllCaps="false"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num7"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="7"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num8"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="8"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/num9"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="9"
        android:background="@drawable/but1"/>

    <Button
        android:id="@+id/equ"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="="
        android:background="@drawable/but2"/>

</GridLayout>